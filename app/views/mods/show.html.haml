- model_class = Mod
.page-header
  %h1= t '.title', default: model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @mod.name
  %dt
    %strong
      = model_class.human_attribute_name(:books)
      \:
  %dd= @mod.books
.form-actions
  = link_to t('.back', default: t("helpers.links.back")), mods_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_mod_path(@mod), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), mod_path(@mod), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
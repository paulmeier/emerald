- model_class = MachineLoc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:location_id)
      %th= model_class.human_attribute_name(:machine_id)
      %th= model_class.human_attribute_name(:raisedFloorLoc)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @machine_locs.each do |machine_loc|
      %tr
        %td= link_to machine_loc.id, machine_loc_path(machine_loc)
        %td= machine_loc.location.name
        %td= machine_loc.machine.name
        %td= machine_loc.raisedFloorLoc
        %td=l machine_loc.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_machine_loc_path(machine_loc), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), machine_loc_path(machine_loc), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_machine_loc_path, :class => 'btn btn-primary'

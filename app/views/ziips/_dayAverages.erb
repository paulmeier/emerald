<script>
$(function() {
  $.datepicker.setDefaults({dateFormat: "yy-mm-dd"});
  $("#from").datepicker({
    minDate: gon.startDate,   
	maxDate: gon.endDate,
    defaultDate: "-1d",
    changeMonth: true,
    changeYear: true,
    numberOfMonths: 1,
	    onSelect: function(selectedDate) {
	      $("#to").datepicker("option", "minDate", selectedDate);
	     	}
     });

  $("#to").datepicker({
    minDate: "#cpudbdfrom",
  	maxDate: gon.endDate,
    defaultDate: "-1d",
    changeMonth: true,
    changeYear: true,
    numberOfMonths: 1,
	    onSelect: function(selectedDate) {
	      $("#from").datepicker("option", "maxDate", selectedDate);
	     }
    });
});
</script>

- model_class = Machine
.page-header
  %h1= t '.title', default: model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @machine.name
  %dt
    %strong
      = model_class.human_attribute_name(:serialNumber)
      \:
  %dd= @machine.serialNumber
.form-actions
  = link_to t('.back', default: t("helpers.links.back")), machines_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_machine_path(@machine), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), machine_path(@machine), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

- model_class = Notification
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @notification.name
%p
  %strong= model_class.human_attribute_name(:msg) + ':'
  %br
  = @notification.msg

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), notifications_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_path(@notification), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), notification_path(@notification), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

- model_class = CustomerInformationControlSystem
%h1= t '.title', default: model_class.model_name.human.pluralize
%br
  = link_to image_tag('xls-icon.png', height: "3.5%", width: "3.5%"),url_for(format: 'xls'),class: "xlsicon"
  = link_to image_tag('PDF_icon.gif', height: "3%", width: "3%"), url_for(format: 'pdf')
  %br
    %br
      %table.table.table-striped
        %tr
          %th Id
          %th Name
          %th= model_class.human_attribute_name(:created_at)
          %th= t '.actions', default: t("helpers.actions")
      
        - @customer_information_control_systems.each do |customer_information_control_system|
          %tr
            %td= customer_information_control_system.id
            %td= customer_information_control_system.name
            %td= l customer_information_control_system.created_at
            %td
              = link_to t('.edit', default: t("helpers.links.edit")), edit_customer_information_control_system_path(customer_information_control_system), class: 'btn btn-mini'
              = link_to t('.destroy', default: t("helpers.links.destroy")),customer_information_control_system_path(customer_information_control_system), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger'
      = link_to t('.new', default: t("helpers.links.new")), new_customer_information_control_system_path, class: 'btn btn-primary'
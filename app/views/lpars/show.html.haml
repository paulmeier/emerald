- model_class = Lpar
.page-header
  %h1= t '.title', default: model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:mid)
      \:
  %dd= @lpar.mid
  %dt
    %strong
      = model_class.human_attribute_name(:smfid)
      \:
  %dd= @lpar.smfid
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @lpar.name
.form-actions
  = link_to t('.back', default: t("helpers.links.back")), lpars_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_lpar_path(@lpar), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), lpar_path(@lpar), method: 'delete',                                                                     |
    confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')),          |
    class: 'btn btn-danger'                                                                         |
